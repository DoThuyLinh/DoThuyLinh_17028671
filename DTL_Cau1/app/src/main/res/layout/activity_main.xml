<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#B70BB97C"
        android:gravity="center|center_horizontal|center_vertical"
        android:text="Đăng nhập hệ thống"
        android:textColor="#0C1A18"
        android:textSize="24sp" />

    <LinearLayout
        android:id="@+id/taikhoan"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Tài khoản:"
            android:textColor="#2E302C"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/editText_Taikhoan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="Không được để trống"
            android:inputType="textPersonName" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Tài khoản:"
            android:textColor="#2E302C"
            android:textSize="18sp" />
        <EditText
            android:id="@+id/editText_Matkhau"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="Không được để trống"
            android:inputType="textPersonName" />


    </LinearLayout>

    <CheckBox
        android:id="@+id/checkBox_Luuthongtin"
        android:layout_width="274dp"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:text="Lưu thông tin"
        android:textSize="18sp" />

    <Button
        android:id="@+id/button_Dangnhap"
        android:layout_width="274dp"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:text="Đăng nhập"
        android:textAllCaps="false"
        android:textSize="18sp" />

    <Button
        android:id="@+id/button_Thoat"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:text="Thoát"
        android:textAllCaps="false"
        android:textSize="18sp" />

</LinearLayout>